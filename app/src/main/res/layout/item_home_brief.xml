<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/rootLayout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/wishTitle"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:layout_marginTop="20dp"        android:textSize="18sp"        tools:text="Good Morning" />    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/username"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:textSize="20sp"        android:textStyle="bold"        tools:text="username" />    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:cardCornerRadius="5dp"        app:cardElevation="0dp">    </androidx.cardview.widget.CardView></LinearLayout>