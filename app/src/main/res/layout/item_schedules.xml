<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/rootLayout"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?attr/selectableItemBackground"    android:orientation="vertical">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp">        <androidx.appcompat.widget.AppCompatTextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/your_schedules"            android:textSize="16sp" />        <androidx.appcompat.widget.AppCompatImageView            android:id="@+id/addSchedule"            android:layout_width="25dp"            android:layout_height="25dp"            app:srcCompat="@color/colorAccent"            android:layout_gravity="end" />    </FrameLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/commonRcv"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp" /></LinearLayout>